#include <iostream>
#include <string>
#include <vector>
#include <fstream>

using namespace std;
int exitX;
int exitY;
vector<string> labyrinth;
char wall = '*';

void printVector(const vector<string> &arr){
    if(arr.size() > 0){
        for(int  i = 0; i < arr.size(); i++)
            cout << arr[i] << endl;
        cout << endl;
    }
}

int itc_len(string str){
    int kol = 0;
    for(int i = 0; str[i] != '\0'; i++){
        kol++;
    }
    return kol;
}

int itc_toInt(string s){
    long long num = 0;
    for(long long i = 0; i < itc_len(s); i++){
        num += s[i] - 48;
        num *= 10;
    }
    num /= 10;
    return num;
}

void readFromFile(ifstream &inputFromFile, int &posX, int &posY){
    string foo;
    vector<string> fileContent;
    for(getline(inputFromFile, foo); !inputFromFile.eof(); getline(inputFromFile, foo))
        fileContent.push_back(foo);
    fileContent.push_back(foo);
    for(int i = 0; i < fileContent.size() - 2; i++)
        labyrinth.push_back(fileContent[i]);
    posX = itc_toInt(fileContent[fileContent.size() - 1]);
    posY = itc_toInt(fileContent[fileContent.size() - 2]);
}

bool findPath(int posX, int posY, int direction){
    printVector(labyrinth);

    if(labyrinth[posY][posX] == ' '){
        cout << "X:" << posX << endl << "Y:" << posY << endl;
        if(posX == 0 || posX == itc_len(labyrinth[0]) - 1 || posY == 0 || posY == labyrinth.size() - 1){
            cout << "exit is at:\nX:" << posX << endl << "Y:" << posY << endl;
            labyrinth[posY][posX] = '0';
            return true;
        }
        for(int i = 0; i < 4; i++){
    //        if(findPath((i == 0 && labyrinth[posY][posX - 1] == ' ' && direction != 2 ? posX - 1 : i == 2 && labyrinth[posY][posX + 1] == ' ' && direction != 0 ? posX + 1 : posX),
    //                    (i == 1 && labyrinth[posY - 1][posX] == ' ' && direction != 3 ? posY - 1 && labyrinth[posY + 1][posX] == ' ' && direction != 1 : i == 3 ? posY + 1 : posY),
    //                    (i == 0 && labyrinth[posY][posX - 1] == ' ' && direction != 2 ? 0 : i == 2 && labyrinth[posY][posX + 1] == ' ' && direction != 0 ? 2 :
    //                     i == 1 && labyrinth[posY - 1][posX] == ' ' && direction != 3 ? 1 : 3))){
    //            labyrinth[posY][posX] = '0';
    //            return true;
    //        }

            if(i == 0 && direction != 2){
                if(findPath(posX - 1, posY, 0)){
                labyrinth[posY][posX] = '0';
                return true;
                }
            }
            else if(i == 2 && direction != 0){
                if(findPath(posX + 1, posY, 2)){
                labyrinth[posY][posX] = '0';
                return true;
                }
            }
            else if(i == 1 && direction != 3){
                if(findPath(posX, posY - 1, 1)){
                labyrinth[posY][posX] = '0';
                return true;
                }
            }
            else if(i == 3 && direction != 1){
                if(findPath(posX, posY + 1, 3)){
                labyrinth[posY][posX] = '0';
                return true;
                }
            }
        }
    }
    return false;
}

int main(int argc, char* args[])
{
    int posX, posY;
    ifstream inputFromFile("Levels\\L3.txt");
    readFromFile(inputFromFile, posX, posY);
    findPath(posX, posY, 0);
    labyrinth[posY][posX] = 'X';
    printVector(labyrinth);
    inputFromFile.close();
    return 0;
}
